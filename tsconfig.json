{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es5", "es6", "ESNext", "ES2021"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "node_modules/*",
    "./node_modules",
    "./node_modules/@types/**/*"
  ],
  "include": ["src/**/*.ts"]
}
